{
	"org": "$HZN_ORG_ID",
	"label": "$SERVICE_NAME for $ARCH",
	"description": "A service to deploy Grafana with Open Horizon",
	"documentation": "https://grafana.com/docs/grafana/latest/",
	"url": "$SERVICE_NAME",
	"version": "$SERVICE_VERSION",
	"arch": "$ARCH",
	"public": true,
	"sharable": "singleton",
	"requiredServices": [],
	"userInput": [
		{
			"name": "INIT_TYPE",
			"label": "Whether to deploy AnyLog or shell as a docker container",
			"type": "string",
			"defaultValue": "prod"
		},
		{
			"name": "MY_TIME_ZONE",
			"label": "User time zone",
			"type": "string",
			"defaultValue": "America/New_York"
		}
	],
	"deployment": {
		"services": {
			"$SERVICE_NAME": {
				"image": "$DOCKER_IMAGE_BASE:$DOCKER_IMAGE_VERSION",
				"ports": [
					{ "HostIP": "0.0.0.0", "HostPort": "3000:3000/tcp" }
				],
			        "binds": [
					"$DOCKER_VOLUME_NAME:/var/lib/grafana"
				]
			}
		}
   }
}
